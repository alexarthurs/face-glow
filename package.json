{
  "name": "face-glow",
  "version": "1.1.0",
  "description": "FaceGlow transforms your a computer monitor into a virtual key light for webcams, ensuring you look your best during video calls and streams.",
  "productName": "FaceGlow",
  "author": "Alex Arthurs <info@alexarthurs.com>",
  "private": true,
  "main": "./dist/electron/UnPackaged/electron-main.js",
  "build": {
    "appId": "com.alexarthurs.faceglow",
    "win": {
      "target": "portable",
      "icon": "src-electron/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src-electron/icons/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "src-electron/icons/icon.icns"
    },
    "files": [
      "dist/electron/**/*"
    ]
  },
  "scripts": {
    "dev": "quasar dev -m electron",
    "build": "quasar build -m electron",
    "lint": "eslint --ext .js,.ts,.vue ./",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "echo \"No test specified\" && exit 0",
    "pack": "electron-builder --dir",
    "compile": "tsc",
    "dist": "npm run compile && electron-builder",
    "dist:win": "npm run dist -- -w",
    "dist:linux": "npm run dist -- -l",
    "dist:mac": "npm run dist -- -m",
    "start": "npm run compile && electron ."
  },
  "dependencies": {
    "@quasar/extras": "^1.0.0",
    "electron-store": "^8.1.0",
    "quasar": "^2.6.0",
    "vue": "^3.0.0",
    "vue-router": "^4.0.0"
  },
  "devDependencies": {
    "@quasar/app-vite": "^1.0.0",
    "@types/node": "^12.20.21",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "autoprefixer": "^10.4.2",
    "electron": "^28.2.3",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-vue": "^9.0.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": "^18 || ^16 || ^14.19",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}